<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94ECEF"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".AddCopany">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Добавление новой компании"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_name_company"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:hint="Название компании"
            android:inputType="textMultiLine"
            android:lines="5" />

        <EditText
            android:id="@+id/et_info_company"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="top|left"
            android:textStyle="bold"
            android:hint="Информация о компании"
            android:inputType="textMultiLine"
            android:lines="20"
            android:maxLines="30"
            android:minLines="1"
            android:scrollbars="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#4842FA"
            android:text="Назад"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_add_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#4842FA"
            android:text="Добавить"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>